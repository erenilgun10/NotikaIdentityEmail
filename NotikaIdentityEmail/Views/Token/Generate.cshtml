@using NotikaIdentityEmail.Models.JwtModels
@model SimpleUserViewModel
@{
    ViewData["Title"] = "Generate";
    Layout = "~/Views/UserLayout/Index.cshtml";

}
<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div class="basic-tb-hd">
                        <h2>Token Sayfası</h2>
                        <p> Alanları doldurarak token oluşturabilirsiniz.</p>
                    </div>
                    <form action="Generate" method="post">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" asp-for="FirstName" placeholder="Adınız">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" asp-for="LastName" placeholder="Soyadınız">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" asp-for="City" placeholder="Şehiriniz">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" class="form-control" asp-for="Username" placeholder="Username">
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-success"> Token Oluştur</button>
                            @if (!string.IsNullOrEmpty(Model?.Token))
                            {
                                <div class="alert alert-success">
                                    Token başarıyla oluşturuldu.
                                    <strong> Oluşturulan Token:</strong>
                                    <textarea class="form-control" rows="5">@Model.Token</textarea>
                                </div>
                            }


                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
