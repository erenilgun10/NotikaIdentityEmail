@using Microsoft.AspNetCore.Identity
@model List<Comment>
@{
    ViewData["Title"] = "User Comments";
    Layout = "~/Views/UserLayout/Index.cshtml";
}

<style>
    .forum-board {
        max-width: 760px;
        margin: 0 auto;
        padding: 2.5rem 0;
    }

    .forum-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 1.75rem;
    }

    .forum-title {
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0;
        color: #0f172a;
    }

    .forum-subtitle {
        margin: 0.15rem 0 0;
        font-size: 0.95rem;
        color: #64748b;
    }

    .forum-chip {
        font-size: 0.9rem;
        padding: 0.4rem 1.1rem;
        border-radius: 999px;
        border: 1px solid #e2e8f0;
        color: #475569;
        background: #fff;
    }

    .comment-stack {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .comment-card {
        border: 1px solid #e2e8f0;
        border-radius: 16px;
        padding: 1.25rem 1.5rem;
        background: #fff;
        box-shadow: 0 12px 30px rgba(15, 23, 42, 0.08);
        transition: transform 120ms ease, box-shadow 120ms ease;
    }

        .comment-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 18px 40px rgba(15, 23, 42, 0.12);
        }

    .comment-meta {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        gap: 1rem;
        margin-bottom: 0.65rem;
    }

    .comment-author {
        font-weight: 600;
        color: #0f172a;
    }

    .comment-date {
        font-size: 0.9rem;
        color: #94a3b8;
        white-space: nowrap;
    }

    .comment-body {
        margin: 0;
        color: #334155;
        line-height: 1.6;
        font-size: 1rem;
    }

    .empty-state {
        border: 1px dashed #cbd5f5;
        border-radius: 16px;
        padding: 3rem 1rem;
        text-align: center;
        color: #94a3b8;
        background: #f8fafc;
    }

        .empty-state h3 {
            margin: 0;
            color: #0f172a;
            font-size: 1.3rem;
        }
</style>

<section class="forum-board">
    <header class="forum-header">
        <div>
            <p class="forum-title">Forum</p>
            <p class="forum-subtitle">Minimalist topluluk sohbeti</p>
        </div>
        <span class="forum-chip">@((Model?.Count) ?? 0) yorum</span>
    </header>

    @if (!(Model?.Any() ?? false))
    {
        <div class="empty-state">
            <h3>Henüz yorum yok</h3>
            <p>İlk mesajını paylaşarak sohbeti başlat.</p>
        </div>
    }
    else
    {
        <div class="comment-stack">
            @foreach (var item in Model)
            {
                <article class="comment-card">
                    <div class="comment-meta">
                        <span class="comment-author">@item.AppUser.FirstName @item.AppUser.LastName</span>
                        <span class="comment-date">@item.CommentDate.ToString("dd MMM yyyy")</span>
                    </div>
                    <p class="comment-body">@item.CommentDetail</p>
                </article>
            }
        </div>
    }
</section>