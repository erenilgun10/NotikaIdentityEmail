@using NotikaIdentityEmail.Models.CommentViewModels
@model CommentViewModel
@{
    Layout = "~/Views/UserLayout/Index.cshtml";
}

<style>
    :root {
        --primary-color: #c9a961;
        --text-dark: #2c2c2c;
        --text-light: #6b6b6b;
        --border-color: #e5e5e5;
        --bg-white: #ffffff;
        --bg-light: #f8f8f8;
        --success-color: #00c292;
        --error-color: #f44336;
    }

    .comment-form-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .form-card {
        background: var(--bg-white);
        border-radius: 12px;
        padding: 2.5rem;
        border: 1px solid var(--border-color);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .form-header {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid var(--primary-color);
    }

        .form-header h2 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--text-dark);
            margin: 0 0 0.5rem 0;
        }

        .form-header p {
            font-size: 0.9375rem;
            color: var(--text-light);
            margin: 0;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-size: 0.9375rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
    }

    .form-control-comment {
        width: 100%;
        min-height: 180px;
        padding: 1rem;
        border: 2px solid var(--border-color);
        border-radius: 8px;
        font-size: 0.9375rem;
        color: var(--text-dark);
        font-family: inherit;
        transition: all 0.2s ease;
        resize: vertical;
    }

        .form-control-comment:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(201, 169, 97, 0.1);
        }

        .form-control-comment::placeholder {
            color: var(--text-light);
            opacity: 0.7;
        }

    .char-counter {
        text-align: right;
        font-size: 0.8125rem;
        color: var(--text-light);
        margin-top: 0.5rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        margin-top: 2rem;
    }

    .btn-submit,
    .btn-cancel {
        padding: 0.75rem 2rem;
        border: none;
        border-radius: 8px;
        font-size: 0.9375rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-submit {
        background: var(--primary-color);
        color: white;
    }

        .btn-submit:hover {
            background: #b8985a;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(201, 169, 97, 0.3);
        }

    .btn-cancel {
        background: var(--bg-light);
        color: var(--text-dark);
    }

        .btn-cancel:hover {
            background: #e8e8e8;
        }

    .alert-message {
        padding: 1rem 1.25rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        font-size: 0.9375rem;
    }

    .alert-error {
        background: #ffebee;
        border-left: 4px solid var(--error-color);
        color: #c62828;
    }

    .alert-success {
        background: #e8f5e9;
        border-left: 4px solid var(--success-color);
        color: #2e7d32;
    }

    .validation-summary {
        margin-bottom: 1.5rem;
    }

        .validation-summary ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .validation-summary li {
            padding: 0.5rem 0;
            color: var(--error-color);
            font-size: 0.875rem;
        }

    @@media (max-width: 768px) {
        .comment-form-container {
            padding: 1rem;
        }

        .form-card {
            padding: 1.5rem;
        }

        .form-header h2 {
            font-size: 1.5rem;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn-submit,
        .btn-cancel {
            width: 100%;
        }
    }
</style>

<div class="comment-form-container">
    <div class="form-card">
        <div class="form-header">
            <h2>✍️ Yeni Yorum Yaz</h2>
            <p>Düşüncelerini toplulukla paylaş ve sohbete katıl</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert-message alert-error validation-summary">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="CreateComment" asp-controller="Comment" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="commentDetail" class="form-label">Yorumunuz</label>
                <textarea id="commentDetail"
                          name="Comment.CommentDetail"
                          class="form-control-comment"
                          placeholder="Yorumunuzu buraya yazın..."
                          maxlength="1000"
                          required></textarea>
                <div class="char-counter">
                    <span id="charCount">0</span> / 1000 karakter
                </div>
            </div>

            <div class="form-actions">
                <a asp-action="UserComment" asp-controller="Comment" class="btn-cancel">
                    İptal
                </a>
                <button type="submit" class="btn-submit">
                    Yorumu Gönder
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const textarea = document.getElementById('commentDetail');
        const charCount = document.getElementById('charCount');

        if (textarea && charCount) {
            textarea.addEventListener('input', function() {
                const count = this.value.length;
                charCount.textContent = count;

                if (count >= 950) {
                    charCount.style.color = 'var(--error-color)';
                } else if (count >= 800) {
                    charCount.style.color = '#ff9800';
                } else {
                    charCount.style.color = 'var(--text-light)';
                }
            });
        }
    });
</script>