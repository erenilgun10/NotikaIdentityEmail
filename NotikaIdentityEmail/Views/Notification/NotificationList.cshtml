@model List<Notification>
@{
    ViewData["Title"] = "Genel Bildiriler";
    Layout = "~/Views/UserLayout/Index.cshtml";
    var counter = 0;
}

<style>
    /* Modern Modal Overlay */
    .notification-modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(5px);
        z-index: 9999;
        animation: fadeIn 0.3s ease;
    }

        .notification-modal-overlay.active {
            display: flex;
            justify-content: center;
            align-items: center;
        }

    /* Modern Modal Container */
    .notification-modal-container {
        background: white;
        border-radius: 20px;
        max-width: 700px;
        width: 90%;
        max-height: 90vh;
        overflow: hidden;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
        animation: slideUp 0.4s ease;
        position: relative;
    }

    /* Modal Header */
    .notification-modal-header {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        padding: 30px;
        color: white;
        position: relative;
    }

    .notification-modal-close {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        font-size: 28px;
        width: 45px;
        height: 45px;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .notification-modal-close:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: rotate(90deg);
        }

    .notification-modal-title {
        font-size: 24px;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .notification-modal-title i {
            font-size: 28px;
        }

    /* Modal Body */
    .notification-modal-body {
        padding: 35px;
        max-height: 60vh;
        overflow-y: auto;
    }

    .notification-image-wrapper {
        text-align: center;
        margin-bottom: 25px;
    }

        .notification-image-wrapper img {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid #f3f4f6;
            box-shadow: 0 10px 25px rgba(99, 102, 241, 0.3);
            transition: transform 0.3s ease;
        }

            .notification-image-wrapper img:hover {
                transform: scale(1.05);
            }

    .notification-subject-box {
        background: linear-gradient(135deg, #f0f9ff 0%, #e0e7ff 100%);
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 20px;
        border-left: 5px solid #6366f1;
    }

        .notification-subject-box h3 {
            margin: 0;
            font-size: 22px;
            color: #1e293b;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .notification-subject-box i {
            color: #6366f1;
            font-size: 20px;
        }

    .notification-detail-box {
        background: #f8fafc;
        padding: 25px;
        border-radius: 12px;
        line-height: 1.8;
        color: #475569;
        font-size: 16px;
    }

    /* Scrollbar Styling */
    .notification-modal-body::-webkit-scrollbar {
        width: 8px;
    }

    .notification-modal-body::-webkit-scrollbar-track {
        background: #f1f5f9;
        border-radius: 10px;
    }

    .notification-modal-body::-webkit-scrollbar-thumb {
        background: #cbd5e1;
        border-radius: 10px;
    }

        .notification-modal-body::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }

    /* Animations */
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            transform: translateY(50px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .notification-modal-container {
            width: 95%;
            max-height: 85vh;
        }

        .notification-modal-header {
            padding: 20px;
        }

        .notification-modal-body {
            padding: 20px;
        }

        .notification-modal-title {
            font-size: 20px;
        }

        .notification-image-wrapper img {
            width: 100px;
            height: 100px;
        }

        .notification-subject-box h3 {
            font-size: 18px;
        }
    }
</style>

<div class="inbox-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                <div class="inbox-text-list sm-res-mg-t-30">
                    <div class="form-group">
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 5%;">#</th>
                                    <th style="width: 10%;">Resim</th>
                                    <th style="width: 15%;">Gönderici</th>
                                    <th style="width: 25%;">Konu</th>
                                    <th style="width: 45%;">Detay</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    counter++;
                                    var detailText = item?.Detail ?? "";
                                    var plainText = System.Text.RegularExpressions.Regex.Replace(detailText, "<.*?>", string.Empty);
                                    var detailPreview = plainText.Length > 50
                                    ? plainText.Substring(0, 50) + "..."
                                    : plainText;

                                    <tr onclick="showNotificationDetails(`@Html.Raw(item?.Detail?.Replace("`", "\\`"))`, '@item?.ImageUrl', `@Html.Raw(item?.Subject?.Replace("`", "\\`"))`)" style="cursor: pointer;">
                                        <td>@counter</td>
                                        <td><div class="hd-message-img chat-img"><img src="@item?.ImageUrl" alt="" style="width: 50px; height: 50px; object-fit: cover;" /></div></td>
                                        <td>System</td>
                                        <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@item?.Subject</td>
                                        <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@detailPreview</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modern Notification Modal -->
<div class="notification-modal-overlay" id="notificationModalOverlay" onclick="closeNotificationModal(event)">
    <div class="notification-modal-container" onclick="event.stopPropagation()">
        <div class="notification-modal-header">
            <h2 class="notification-modal-title">
                <i class="fa fa-bell"></i>
                Bildirim Detayı
            </h2>
            <button class="notification-modal-close" onclick="closeNotificationModal()">&times;</button>
        </div>
        <div class="notification-modal-body">
            <div class="notification-image-wrapper">
                <img id="notificationImage" src="" alt="Bildirim Görseli">
            </div>
            <div class="notification-subject-box">
                <h3>
                    <i class="fa fa-tag"></i>
                    <span id="notificationSubject"></span>
                </h3>
            </div>
            <div class="notification-detail-box" id="notificationDetail">
            </div>
        </div>
    </div>
</div>

<script>
    function showNotificationDetails(detail, imageUrl, subject) {
        document.getElementById('notificationSubject').innerText = subject || 'Belirtilmemiş';
        document.getElementById('notificationDetail').innerHTML = detail || 'Detay bulunmuyor.';
        document.getElementById('notificationImage').src = imageUrl || '/images/default-notification.png';

        const overlay = document.getElementById('notificationModalOverlay');
        overlay.classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    function closeNotificationModal(event) {
        if (event && event.target.classList.contains('notification-modal-container')) {
            return;
        }

        const overlay = document.getElementById('notificationModalOverlay');
        overlay.classList.remove('active');
        document.body.style.overflow = 'auto';
    }

    // ESC tuşu ile kapatma
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            closeNotificationModal();
        }
    });
</script>