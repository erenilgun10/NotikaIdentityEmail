@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
 @await Component.InvokeAsync("LoginHead",new {title ="Kullanıcı Aktivasyon"} )
<body>

	<div class="limiter">
		<div class="container-login100" style="background-image: url('/Login_v4/images/bg-01.jpg');">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				<form class="login100-form validate-form" method="post">
					<span class="login100-form-title p-b-49">
						Email Validasyon
					</span>
					<div class="wrap-input100 validate-input m-b-23">
						<span class="label-input100">Doğrulama Kodu</span> 
						<input class="input100" type="text" name="activateCode" placeholder=" Doğrulama kodunu giriniz.">
						<span class="focus-input100" data-symbol="&#xf206;"></span>
					</div>

				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button class="login100-form-btn">
								Hesabı Doğrula
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>


	<div id="dropDownSelect1"></div>
    @await Component.InvokeAsync("LoginScripts")

</body>
</html>