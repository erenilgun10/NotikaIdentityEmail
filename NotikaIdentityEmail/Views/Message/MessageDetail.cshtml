@model Message
@{
    ViewData["Title"] = "Message Detail";
    Layout = "~/Views/UserLayout/Index.cshtml";

    var now = DateTime.Now;
    var sendDate = Model.SendDate;

    var diff = now - sendDate;

    if (diff < TimeSpan.Zero)
    {
        diff = TimeSpan.Zero; // gelecekteyse eksi göstermesin
    }

    var days = diff.Days;     // kaç tam gün
    var hours = diff.Hours;   // gün düştükten sonra kalan saat
    string timeAgo;

    if (days >= 1)
    {
        timeAgo = $"{days} gün {hours} saat önce";
    }
    else
    {
        timeAgo = $"{(int)diff.TotalHours} saat önce";
    }
}

<div class="inbox-area">
    <div class="container">
        <div class="row">

            @await Component.InvokeAsync("MessageSideBar")

            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                <div class="view-mail-list sm-res-mg-t-30">
                    <div class="view-mail-hd">
                        <div class="view-mail-hrd">
                            <h2>Mesaj Detayları</h2>
                        </div>
                        <div class="view-ml-rl">
                            <p>(@Model.SendDate.ToString("dd.MM.yyyy" ) - @timeAgo)</p>
                        </div>
                    </div>
                    <div class="mail-ads mail-vw-ph">
                        <p class="first-ph"><b>Konu: </b>@Model.Subject</p>
                        <p><b>Email:</b> <a href="#">@Model.SenderEmail</a></p>
                        <p class="last-ph"><b>Tarih:</b> @Model.SendDate</p>
                    </div>
                    <div class="view-mail-atn">
                        <p> @Html.Raw(@Model.MessageDetail)</p>
                    </div>
                    <div class="vw-ml-action-ls text-right mg-t-20">
                        <div class="btn-group ib-btn-gp active-hook nk-email-inbox">
                            <button class="btn btn-default btn-sm waves-effect"><i class="notika-icon notika-next"></i> Yanıtla</button>
                            <button class="btn btn-default btn-sm waves-effect"><i class="notika-icon notika-right-arrow"></i> Yönlendir</button>
                            <button class="btn btn-default btn-sm waves-effect"><i class="notika-icon notika-print"></i> Yazdır</button>
                            <button class="btn btn-default btn-sm waves-effect"><i class="notika-icon notika-trash"></i> Sil</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>