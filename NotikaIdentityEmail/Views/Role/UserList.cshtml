@using Microsoft.AspNetCore.Identity
@model List<AppUser>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/UserLayout/Index.cshtml";
    var count = 0;
}

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div class="basic-tb-hd">
                        <h2>Kullanıcı Listesi</h2>
                        <p>Rol eklemek istediğiniz kullanıcı listesini alta bulabilirsiniz..</p>
                    </div>
                    <div class="row">

                        <table class="table table-bordered">
                            <tr>
                                <th>#</th>
                                <th>Ad - Soyad</th>
                                <th>Kullanıcı Adı</th>
                                <th>Kullanıcı Maili</th>
                                <th>Rol Ata</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.FirstName @item.LastName</td>
                                    <td>@item.UserName </td>
                                    <td>@item.Email </td>
                                    <td><a href="/Role/AssingRole/@item.Id" class="btn btn-check"> Rol Ekle</a></td>
                                </tr>
                            }
                        </table>
                        <a href="/Role/CreateRole" class="btn btn-primary">Yeni Rol Oluştur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>