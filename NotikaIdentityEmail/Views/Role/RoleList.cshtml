@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
@{
    ViewData["Title"] = "Rol Listesi";
    Layout = "~/Views/UserLayout/Index.cshtml";
    var count = 0;
}

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div class="basic-tb-hd">
                        <h2>Rol Listesi</h2>
                        <p>Oluşturmak istediğiniz rol adını aşşağıdaki kutucuğa girebilirsiniz.</p>
                    </div>
                    <div class="row">

                        <table class="table table-bordered">
                            <tr>
                                <th>#</th>
                                <th>Rol Adı</th>
                                <th>Rol Sil</th>
                                <th>Rol Güncelle</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </table>
                        <a href="/Role/CreateRole" class="btn btn-primary">Yeni Rol Oluştur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>