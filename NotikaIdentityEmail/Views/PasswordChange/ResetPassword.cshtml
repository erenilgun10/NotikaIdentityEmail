@using NotikaIdentityEmail.Models.ForgetPasswordModels
@model ResetPasswordViewModel
@{
    Layout = null;
}


@await Component.InvokeAsync("HeaderUserLayout")

<body class="container">

    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Token" />

    <br /><br />
    <h2 class="text-center">Şifre Sıfırlama</h2>
    <form method="post">
        <div class="form-group">
            <label for="NewPassword">Yeni Şifre</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Yeni şifrenizi giriniz" required />
        </div>
        <div class="form-group">
            <label for="ConfirmPassword">Yeni Şifre (Tekrar)</label>
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Yeni şifrenizi tekrar giriniz" required />
        </div>
        <button type="submit" class="btn btn-primary">Şifreyi Sıfırla</button>
    </form>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


</body>



@await Component.InvokeAsync("FooterUserLayout")